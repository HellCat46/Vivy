{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
    ],
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "https://graphql.anilist.co",
        "tadaOutputLocation": "./src/graphql-env.d.ts"
      }
    ],
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": true
  },
}